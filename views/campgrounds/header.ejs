<!DOCTYPE html>
<html>
	<head>
		<title>YelpCamp</title>
		

		 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
		<link rel="stylesheet" href="/stylesheets/main.css">
	</head>
	<body>
		<nav id="mainnav" class="navbar navbar-dark bg-dark navbar-expand-md py-0 mb-5 fixed-top">
      <a href="/" class="navbar-brand">YelpCamp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navLinks">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse justify-content-end" id="navLinks">
        <ul class="navbar-nav">
			<% if(!currentUser){ %>
          <li class="nav-item">
            <a href="/login" class="nav-link">Login</a>
          </li>
          <li class="nav-item">
            <a href="/register" class="nav-link">Signup</a>
          </li>
			<%} else {%>
			<li class="nav-item"><a href="#" class="nav-link">Signed In As <%=currentUser.username%></a></li>
			
          <li class="nav-item">
            <a href="/logout" class="nav-link">Logout</a>
          </li>
			<% } %>
        </ul>
      </div>  


    </nav>
		<%if(error && error.length>0){%>
		<div class="container">
				<div class="alert alert-danger" role="alert">

	<%=error%>
		  
</div><%}%>
			
		</div>
		<%if(success && success.length>0){%>
		<div class="container">
				<div class="alert alert-success" role="alert">

	<%=success%>
		  
</div>
			
		</div>
<%}%>
		
	