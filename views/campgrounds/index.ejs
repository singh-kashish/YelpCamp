<%- include("../partials/header") %>










<div class="container-fluid">
	
		<header class="jumbotron">
		<h1>
			Welcome to YelpCamp
		</h1>
		<p>
			View our hand-picked campgrounds from all over the world
		</p>
		<p>
			<a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>	
		</p>
		
		</header>
</div>
		<div class="row px-2 text-center d-flex flex-wrap justify-content-around">
		<% campgrounds.forEach(function(campground){%>
			<div class="col-md-3 col-sm-6">
				<div class="figure">
					<img class="img-thumbnail" src="<%=campground.image%>">
				<div class="figure-caption">
					<h4>
						<%= campground.name%></h4>
					</h4>
					</div>
				<p>
					<a href="/campgrounds/<%= campground._id%>" class="btn btn-info">More Info</a>
				</p>
				</div>
				
				
			
			</div>
<%})%>
		
	
	</div>


	
	
	
<%- include("../partials/footer")%>